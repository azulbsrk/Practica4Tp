<Window x:Class="WpfProductos.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gestor de Productos" Height="400" Width="600"
        Background="#FFEFF7FF">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Spacing="10">
            <TextBox x:Name="txtNombre" Width="200" PlaceholderText="Nombre"/>
            <TextBox x:Name="txtPrecio" Width="100" PlaceholderText="Precio"/>
            <Button Content="Agregar" Width="100" Click="Agregar_Click" Background="#FF6AA6FF"/>
        </StackPanel>

        <ListView x:Name="listaProductos" Grid.Row="1" Margin="0,15,0,15">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Nombre" Width="200" DisplayMemberBinding="{Binding Nombre}"/>
                    <GridViewColumn Header="Precio" Width="100" DisplayMemberBinding="{Binding Precio}"/>
                </GridView>
            </ListView.View>
        </ListView>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Spacing="10">
            <Button Content="QuickSort" Width="100" Click="QuickSort_Click" Background="#FF8EC5FF"/>
            <Button Content="MergeSort" Width="100" Click="MergeSort_Click" Background="#FF8EC5FF"/>
        </StackPanel>
    </Grid>
</Window>
